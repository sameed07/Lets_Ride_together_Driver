<?xml version="1.0" encoding="utf-8"?>
<selector>
    <item xmlns:n1="http://schemas.android.com/apk/res/android" n1:state_enabled="false">
        <shape>
            <solid n1:color="@color/gray" />
            <stroke n1:width="1.0dip" n1:color="@color/gray" />
            <corners n1:radius="6.0dip" />
            <padding n1:bottom="10.0dip" n1:left="10.0dip" n1:right="10.0dip" n1:top="10.0dip" />
        </shape>
    </item>
    <item xmlns:n2="http://schemas.android.com/apk/res/android" n2:state_pressed="true">
        <shape>
            <solid n2:color="#ffa0eca0" />
            <stroke n2:width="1.0dip" n2:color="#ffa0eca0" />
            <corners n2:radius="6.0dip" />
            <padding n2:bottom="10.0dip" n2:left="10.0dip" n2:right="10.0dip" n2:top="10.0dip" />
        </shape>
    </item>
    <item xmlns:n3="http://schemas.android.com/apk/res/android" n3:state_enabled="true" n3:textColor="@color/white">
        <shape>
            <gradient n3:angle="270.0" n3:endColor="@color/colorPrimary" n3:startColor="@color/colorPrimary" />
            <stroke n3:width="1.0dip" n3:color="@color/colorPrimary" />
            <corners n3:radius="6.0dip" />
            <padding n3:bottom="10.0dip" n3:left="10.0dip" n3:right="10.0dip" n3:top="10.0dip" />
        </shape>
    </item>
</selector>