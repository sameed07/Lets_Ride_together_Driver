<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PostRequestActivity">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >



        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toolbar_bg"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"

            >

            <androidx.appcompat.widget.Toolbar
                android:background="@color/white"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_arrow_back_black_24dp"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Post your Travel"
                    android:paddingRight="32dp"
                    android:textSize="14sp"
                    android:textColor="@color/transparentBlack"
                    android:textStyle="bold"
                    android:layout_marginLeft="32dp"
                    />


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a Ride"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="32dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_bike"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/selected_bike"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    />
                <ImageView
                    android:id="@+id/img_car"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/not_selected_car"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"

                app:cardCornerRadius="4dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="12dp"
                android:elevation="4dp"
                >

                <LinearLayout
                    android:layout_marginBottom="18dp"
                    android:paddingRight="12dp"
                    android:layout_width="327dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set your Regular Route"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_margin="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/location_line_two"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"

                            >
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Starting point"
                                android:layout_marginLeft="12dp"
                                android:maxLines="1"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/devidercolor"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"/>

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="End point"
                                android:layout_marginTop="2dp"
                                android:layout_marginLeft="12dp"

                                android:maxLines="1"
                                />

                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:id="@+id/days_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/regularTripsw"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1.0"
                    android:gravity="center|left"
                    android:paddingRight="5.0dip"
                    android:switchMinWidth="0.0dip"
                    android:text="Regular Trip"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:thumb="@drawable/switch_thumb"
                    android:thumbTextPadding="10.0dip"
                    android:track="@drawable/switch_track" />

                <LinearLayout
                    android:layout_marginRight="12dp"
                    android:id="@+id/offerdaysLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="6dp">

                    <ToggleButton
                        android:layout_margin="2dp"
                        android:id="@+id/Sat"
                        android:layout_width="@dimen/book_ride_day_medium"
                        android:layout_height="@dimen/book_ride_day_medium"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/daycheckbox_background"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ffa9a9a9"
                        android:textOff="Sat"
                        android:textOn="Sat"
                        android:textSize="12sp" />

                    <ToggleButton
                        android:layout_margin="2dp"
                        android:id="@+id/Sun"
                        android:layout_width="@dimen/book_ride_day_medium"
                        android:layout_height="@dimen/book_ride_day_medium"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/daycheckbox_background"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ffa9a9a9"
                        android:textOff="Sun"
                        android:textOn="Sun"
                        android:textSize="12sp" />

                    <ToggleButton
                        android:layout_margin="2dp"
                        android:id="@+id/Mon"
                        android:layout_width="@dimen/book_ride_day_medium"
                        android:layout_height="@dimen/book_ride_day_medium"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/daycheckbox_background"
                        android:checked="true"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ffffffff"
                        android:textOff="Mon"
                        android:textOn="Mon"
                        android:textSize="12sp" />

                    <ToggleButton
                        android:layout_margin="2dp"
                        android:id="@+id/Tue"
                        android:layout_width="@dimen/book_ride_day_medium"
                        android:layout_height="@dimen/book_ride_day_medium"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/daycheckbox_background"
                        android:checked="true"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ffffffff"
                        android:textOff="Tue"
                        android:textOn="Tue"
                        android:textSize="12sp" />

                    <ToggleButton
                        android:layout_margin="2dp"
                        android:id="@+id/Wed"
                        android:layout_width="@dimen/book_ride_day_medium"
                        android:layout_height="@dimen/book_ride_day_medium"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/daycheckbox_background"
                        android:checked="true"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ffffffff"
                        android:textOff="Wed"
                        android:textOn="Wed"
                        android:textSize="12sp" />

                    <ToggleButton
                        android:layout_margin="2dp"
                        android:id="@+id/Thu"
                        android:layout_width="@dimen/book_ride_day_medium"
                        android:layout_height="@dimen/book_ride_day_medium"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/daycheckbox_background"
                        android:checked="true"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ffffffff"
                        android:textOff="Thu"
                        android:textOn="Thu"
                        android:textSize="12sp" />

                    <ToggleButton
                        android:layout_margin="2dp"
                        android:id="@+id/Fri"
                        android:layout_width="@dimen/book_ride_day_medium"
                        android:layout_height="@dimen/book_ride_day_medium"
                        android:layout_marginRight="2.0dip"
                        android:background="@drawable/daycheckbox_background"
                        android:checked="true"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#ffffffff"
                        android:textOff="Fri"
                        android:textOn="Fri"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Date And time"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="32dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_datepicker"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Set Date And time"
                android:layout_marginTop="14dp"
                android:textSize="10dp"
                android:layout_marginLeft="32dp"
                android:background="@drawable/btn_background"
                android:padding="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What about trip?"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="32dp"
                android:textStyle="bold"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="32dp"
                android:id="@+id/radioGroup">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One Way"

                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Round Trip"
                    android:checked="false"
                    />
            </RadioGroup>

            <View
                android:layout_marginTop="6dp"
                android:layout_marginLeft="32dp"
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/light_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select available seats"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="32dp"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp"
                >



                <RadioGroup

                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="32dp"
                    android:id="@+id/seat_radio">

                    <RadioButton

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"

                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:checked="false"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"

                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:checked="false"
                        />
                </RadioGroup>


            </LinearLayout>
        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/btn_signin_drawble"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:text="Post Travel"
            android:textColor="@color/white"
            />



    </LinearLayout>

</ScrollView>