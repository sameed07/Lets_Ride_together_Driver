<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.DriverDetailFragment"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/location_card"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:elevation="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <ImageView
                android:layout_marginTop="18dp"
                android:layout_width="30dp"
                android:layout_height="90dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/location_line_two"
                />
            <LinearLayout
                android:layout_marginTop="18sp"
                android:paddingRight="12dp"
                android:layout_width="327dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"

                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starting Point"

                    />

                <TextView
                    android:id="@+id/txt_startingpoint"
                    android:paddingRight="8dp"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pindi road, Madina town, kohat"
                    android:textColor="@color/light_gray"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="End Point" />

                <TextView
                    android:id="@+id/txt_endingpoint"
                    android:maxLines="1"
                    android:paddingRight="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kohat university of science and technology"
                    android:textColor="@color/light_gray"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_below="@+id/location_card"
        android:id="@+id/seat_card"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:elevation="4dp"
        >

        <LinearLayout
            android:layout_marginTop="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginLeft="18dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Looking for"
                    android:textColor="@color/light_gray"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txt_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Car"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trip"
                    android:textStyle="bold"
                    android:textColor="@color/light_gray"/>
                <TextView
                    android:id="@+id/txt_trip"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Round Trip"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date -Time"
                    android:textColor="@color/light_gray"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12-01-20  09:30 pm"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_below="@+id/seat_card"
        android:id="@+id/days_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="6dp"
        android:elevation="4dp"
        >

        <LinearLayout
            android:layout_marginTop="12sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginLeft="18dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Travel Days"
                    android:textStyle="bold"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/txt_monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    android:textColor="@color/light_gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:textColor="@color/light_gray"
                    android:id="@+id/txt_tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuesday"
                    android:textStyle="bold"
                    android:textSize="14sp"/>
                <TextView
                    android:textColor="@color/light_gray"
                    android:id="@+id/txt_wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wednesday"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <TextView
                    android:textColor="@color/light_gray"
                    android:id="@+id/txt_thursday"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thursday"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    />
                <TextView
                    android:textColor="@color/light_gray"
                    android:id="@+id/txt_friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friday"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txt_saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saturday"
                    android:textColor="@color/light_gray"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="32dp"

                >

                <TextView
                    android:id="@+id/txt_sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/light_gray"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="12sp"
        android:weightSum="2">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12sp"
            android:text="Message"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/btn_background"/>
        <Button
            android:id="@+id/request_btn"
            android:layout_marginRight="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="12sp"
            android:text="Offer Ride"
            android:textColor="@color/white"
            android:background="@drawable/btn_signin_drawble"/>

    </LinearLayout>

</RelativeLayout>
