<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="Fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/material_dark"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/default_profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="12sp"
                android:text="Sameed Shah"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/switch_card"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="12sp"
            android:layout_marginTop="180dp"
            android:layout_marginRight="12dp"
            android:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <Switch
                    android:id="@+id/carpool_switch"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="12sp"
                    android:layout_marginRight="32dp"
                    android:layout_weight="1.0"
                    android:checked="true"
                    android:paddingRight="5.0dip"
                    android:switchMinWidth="0.0dip"
                    android:text="Carpooling mode"
                    android:textColor="@color/gray"
                    android:textSize="16sp"
                    android:thumb="@drawable/switch_thumb"
                    android:thumbTextPadding="10.0dip"
                    android:track="@drawable/switch_track" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:background="@color/bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/switch_card">

            <TextView
                android:id="@+id/general_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/switch_card"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:text="General"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logout_layout"
                android:background="@color/white"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"

                >

                <LinearLayout

                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >



                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/low_opacity_green">

                            <ImageView
                                android:tint="@color/white"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginLeft="12sp"
                                android:layout_marginTop="12sp"
                                android:src="@drawable/ic_person_outline_black_24dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12sp"
                        android:layout_marginTop="12sp"
                        android:text="Profile"

                        android:textStyle="bold"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/upgrade_car_layout"
                android:background="@color/white"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logout_layout"

                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"

                >

                <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/customer_support_layout">



                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/low_opacity_green">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12sp"
                                android:layout_marginTop="12sp"
                                android:src="@drawable/ic_directions_car_black_24dp"
                                android:tint="@color/white" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12sp"
                        android:layout_marginTop="12sp"
                        android:text="Upgrade Vehicle "
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/support_layout"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logout_layout"

                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"

                >

                <LinearLayout
                    android:background="@color/white"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/customer_support_layout">



                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/low_opacity_green">

                            <ImageView
                                android:tint="@color/white"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginLeft="12sp"
                                android:layout_marginTop="12sp"
                                android:src="@drawable/ic_mail_outline_black_24dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12sp"
                        android:layout_marginTop="12sp"
                        android:text="Customer Support"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/logout_layout"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logout_layout"

                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:background="@color/white"
                >

                <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/customer_support_layout">



                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/low_opacity_green">

                            <ImageView
                                android:tint="@color/white"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginLeft="12sp"
                                android:layout_marginTop="12sp"
                                android:src="@drawable/ic_exit_to_app_black_24dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12sp"
                        android:layout_marginTop="12sp"
                        android:text="Logout"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>




    </RelativeLayout>


</FrameLayout>
