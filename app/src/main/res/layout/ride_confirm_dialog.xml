<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="310dp"
    android:layout_height="430dp"
    android:id="@+id/confirm_dialog_id">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Ride Request?"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/colorPrimary"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12sp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/driver_profile_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/default_profile"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12sp"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_driver_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Driver Name "
                android:maxLines="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="21sp"/>



        </LinearLayout>


    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <ImageView
        android:layout_marginTop="18dp"
        android:layout_width="30dp"
        android:layout_height="90dp"
        android:layout_marginLeft="26dp"
        android:src="@drawable/location_line_two"
        />
    <LinearLayout
        android:layout_marginTop="18sp"
        android:paddingRight="12dp"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"

        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting Point"

            />

        <TextView
            android:id="@+id/txt_startingpoint"
            android:paddingRight="8dp"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pindi road, Madina town, kohat"
            android:textColor="@color/material_black"
            android:textStyle="bold" />

        <TextView
            android:textColor="@color/gray"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="End Point" />

        <TextView
            android:id="@+id/txt_endingpoint"
            android:maxLines="1"
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kohat university of science and technology"
            android:textColor="@color/material_black"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_date_range_black_24dp" />
        <LinearLayout
            android:layout_marginTop="36dp"
            android:paddingRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date and time "

                />

            <TextView
                android:id="@+id/txt_date_time"
                android:paddingRight="8dp"
                android:maxLines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-04-2020, 19:50"
                android:textColor="@color/material_black"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Confirm Request "
        android:textAllCaps="false"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/btn_signin_drawble"
        android:textColor="@color/white"
        android:id="@+id/btn_confirm"/>

    </LinearLayout>

</RelativeLayout>